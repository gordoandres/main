<% provide(:title, 'Contacto') %>
<h1>Contáctanos</h1>
<div class="row">
	<div class="span6 offset3">
		<%= form_for(@contact) do |f|  %>
		<%= render 'shared/error_messages', object: f.object %>

		<%= f.label :name, "Nombre" %>
		<%= f.text_field :name %>

		<%= f.label :email %>
		<%= f.text_field :email %>
		
		<%= f.label :message, "Mensaje" %>
		<%= f.text_area :message, placeholder: "Escribe tu mensaje aquí." %>

		<div class="hidden">
		<%= f.label :nickname, "Deja este espacio en blanco." %>
		<%= f.text_field :nickname %>
		</div>

		<%= f.submit "Enviar", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>

