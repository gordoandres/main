<li id="<%= feed_item.id %>">
  <%= link_to gravatar_for(feed_item.user), feed_item.user %>
  <span class="user">
    <%= link_to feed_item.user.name, feed_item.user %>
  </span>
  <span class="content"><%= feed_item.nombre %></span>
  <span class="timestamp">
    Creado hace <%= time_ago_in_words(feed_item.created_at) %>.
  </span>
</li>